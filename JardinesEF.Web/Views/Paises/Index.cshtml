@model IEnumerable<JardinesEF.Web.Models.Pais.PaisListVm>

@{
    ViewBag.Title = "Index";
}
<div>
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create", "Paises")" class="btn btn-primary" style="float: right">Nuevo</a>

    }
    <h2>Listado de Países</h2>
</div>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombrePais)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantidadCiudades)
        </th>

        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombrePais)
    </td>
    <td style="text-align: right">
        @Html.DisplayFor(modelItem => item.CantidadCiudades)
    </td>

    <td>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Editar", "Edit", new { id = item.PaisId }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Borrar", "Delete", new { id = item.PaisId }, new { @class = "btn btn-danger" })
        }
        @Html.ActionLink("Detalles", "Details", new { id = item.PaisId }, new { @class = "btn btn-info" }) 
    </td>
</tr>
}

</table>
